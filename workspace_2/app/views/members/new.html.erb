<h1>Member Sign Up</h1>
<% if @member.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@member.errors.count, "error") %> prohibited this tale from being saved:</h2>

      <ul>
      <% @member.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="login-form">
<%=form_for(@member) do |f|%>
    <%=f.label 'Username' %><br/>
    <%=f.text_field :username%><br/>
    <%=f.label 'Email (optional)'%><br/>
    <%=f.email_field :email%><br/>
    <%=f.label 'Password'%><br/>
    <%=f.password_field :password%><br/>
    <%=f.label 'Confirm Password'%><br/>
    <%=f.password_field :password_confirmation%><br/>
    <%=f.label 'Image URL (optional)'%><br/>
    <%=f.text_field :image%><br/>
     <div class="login-btn center">
        <button type="submit" id="login" class="transparent medium-font">Sign Up</button>
    </div>
<%end%>
</div>